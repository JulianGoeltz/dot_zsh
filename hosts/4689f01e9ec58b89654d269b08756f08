# alias tmux='tmuxc'

# Copy Xauthority if we are not in tmux
refresh_display() {
	if [ -z $TMUX ]; then
		cp /afsuser/obreitwi/.Xauthority $FNBHOME
		echo -n $DISPLAY > $FNBHOME/.display
	else
		export DISPLAY=`cat $FNBHOME/.display`
	fi
}
refresh_display
zle -N refresh_display


