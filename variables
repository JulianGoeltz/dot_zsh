export PATH=$HOME/.local/bin:$HOME/usr/bin:$PATH
export LD_LIBRARY_PATH=$HOME/.local/lib:$LD_LIBRARY_PATH
#MANPATH=$MANPATH:

if command -v lsb_release 2>&1 >/dev/null; then
    DISTNAME=$(lsb_release -c -s)
    export PATH=$HOME/.local-$DISTNAME/bin:$PATH
    export LD_LIBRARY_PATH=$HOME/.local-$DISTNAME/lib:$LD_LIBRARY_PATH
fi

export EDITOR="vim"

export VIRTUAL_ENV_DISABLE_PROMPT="true"

